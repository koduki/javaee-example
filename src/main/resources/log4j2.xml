<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="APP" fileName="${sys:java.io.tmpdir}/application.log" append="false">
            <PatternLayout pattern="time:%d{ISO8601}	lavel:%level	%m%n"/>
        </File>
        <File name="ERROR" fileName="${sys:java.io.tmpdir}/error.log" append="false">
            <PatternLayout alwaysWriteExceptions="false" pattern="time:%d{ISO8601}	lavel:%level	%m	stacktrace:%replace{%replace{%xException}{\n}{\\n}}{\t}{  }%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="time:%d{ISO8601}	lavel:%level	%m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="application" level="debug">
            <AppenderRef ref="APP"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="error" level="debug">
            <AppenderRef ref="ERROR"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>