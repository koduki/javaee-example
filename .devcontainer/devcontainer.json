{
  "name": "Payara Server with VSCode Devcontainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "forwardPorts": [8080, 4848, 9009], // Added 9009 for debugging
  "postCreateCommand": ".devcontainer/init-extentions.sh", // && /opt/payara/appserver/bin/asadmin start-domain --debug domain1
  "customizations": {
    "vscode": {
      "extensions": [
        "saoudrizwan.claude-dev",
        "Payara.payara-vscode",
        "ms-azuretools.vscode-docker",
        "vscjava.vscode-java-pack"
      ]
    }
  }
}
